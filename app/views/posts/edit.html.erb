<h4>Edit Post</h4>

<%= form_for @post do |f| %>
    <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>Content</label>
        <%= f.text_area :content, class: "form-control" %>
    </div>
    <button type="submit" class="btn btn-success">Update</button>
<% end %>